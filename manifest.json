{
    "version": "0.1",
    "manifest_version": 2,

    "permissions": [
        "clipboardWrite"
    ],

    "name": "Datify",
    "description": "Generates a timedate string in the format YYYYDDMMHHMM in the clipboard",

    "browser_action": {
        "default_icon": "./icons/48.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "icons": {
        "16": "./icons/16.png",
        "32": "./icons/32.png",
        "48": "./icons/48.png",
        "96": "./icons/96.png"
    }

}