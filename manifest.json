{
    "version": "0.1",
    "manifest_version": 3,
    "offline_enabled": true,

    "permissions": [
        "activeTab",
        "tabs",
        "clipboardWrite", 
        "clipboardRead"
    ],

    "name": "Datify",
    "short_name": "datify",
    "description": "Generates a timedate string in the format YYYYDDMMHHMM in the clipboard",

    "commands": {
        "_execute_action": {}
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_title": "Datify",
        "default_icon": {
            "48": "data/icons/48.png"
        }
    },

    "icons": {
        "48": "data/icons/48.png"
    }

}